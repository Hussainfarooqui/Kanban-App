{
  "name": "kanban-backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "reset-admin": "node scripts/reset-admin.js",
    "build": "tsc -p tsconfig.build.json",
    "start:serverless": "tsc && vercel dev",
    "get-token": "node scripts/get-token.js",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "db:prepare": "node scripts/wait-for-postgres.js && npx prisma db push && npx prisma db seed",
    "dev:docker": "npm run compose:up && npm run db:prepare && npm run dev",
    "dev:docker:down": "npm run compose:down",
    "build:docker": "docker-compose build --no-cache",
    "check-docker": "node scripts/check-docker.js",
    "prepare:sqlite": "node scripts/prepare-sqlite.js",
    "prepare": "node scripts/prepare-dev.js",
    "migrate:dev": "npx prisma migrate dev --name init",
    "migrate:deploy": "npx prisma migrate deploy"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.20",
    "@prisma/client": "^5.22.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "aws-serverless-express": "^3.4.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "typeorm": "^0.3.27",
    "vercel-node-server": "^2.2.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.153",
    "@types/aws-serverless-express": "^3.3.10",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
